<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_movement_history_view_form" model="ir.ui.view">
        <field name="name">report.movement.history.view.form</field>
        <field name="model">report.movement.history</field>
        <field name="arch" type="xml">
            <form string="Filtrado de Reporte de Historial de Movimientos">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="location_id"/>
                        <field name="product_ids"  widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_pdf" string="PDF" type="object" default_focus="1" class="oe_highlight"/>
                    <button name="action_print_xlsx" string="CSV todos los productos" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                
                </footer>
            </form>
        </field>
    </record>
    <!-- action -->
    <record id="report_movement_history_action" model="ir.actions.act_window">
        <field name="name">Reporte de Historial de Movimientos</field>
        <field name="res_model">report.movement.history</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <!-- showing menu -->
    <menuitem id="report_movement_history_menu" name="Reporte de Historial de Movimientos"
              parent="stock.menu_warehouse_report"
              action="report_movement_history_action"/>
</odoo>
